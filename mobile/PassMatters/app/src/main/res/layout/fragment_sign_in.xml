<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvUsername"
            android:text="@string/username_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/etUsername"
            android:layout_margin="@dimen/et_margin"
            android:background="@drawable/edittext"
            android:textColor="@color/white"
            android:textColorHint="@color/app_primary_text_color"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvPassword"
            android:textSize="20dp"
            android:text="@string/password_placeholder"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/etPassword"
            android:password="true"
            android:background="@drawable/edittext"
            android:layout_margin="@dimen/et_margin"
            android:textColor="@color/white"
            android:textColorHint="@color/app_primary_text_color"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        style="@style/buttonStyle"
        android:id="@+id/btSignIn"
        android:background="@color/transparent_80"
        android:layout_marginTop="@dimen/md_20"
        android:text="@string/bt_sign_in"
        android:textColor="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>